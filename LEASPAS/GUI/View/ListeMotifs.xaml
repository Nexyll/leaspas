<UserControl x:Class="LEASPAS.GUI.View.ListeMotifs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LEASPAS.GUI.View"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ListView Name="ListViewMotifs" Grid.Column="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Motif" DisplayMemberBinding="{Binding Nom}" />
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Column="1">
            <Button Name="ButtonAjouterMotif" Click="ButtonAjouterMotif_OnClick">Ajouter un motif</Button>
            <Button Name="ButtonModifierMotif" Click="ButtonModifierMotif_OnClick">Modifier un motif</Button>
        </StackPanel>
    </Grid>
</UserControl>
